stages:
  Prepare the Data:
    actors:
      Get Current Time:
        parent: Now
      Get the Error Fields:
        parent: ErrorFields
        in:
          error:
            external: error
        out:
          inputs:
            schema: '#ref'
  Format the actor's parameters:
    actors:
      Build string from input parameters:
        parent: CsvBuilder
        height: 79
        in:
          header:
            const: false
          maps:
            link: Get the Error Fields/inputs
      Format the current date:
        parent: DateFormat
        in:
          date:
            link: Get Current Time/date
      Get Task Exec ID:
        parent: FabricSetRead
        in:
          key:
            const: TDM_TASK_EXE_ID
            default: false
      Get Executor Name:
        parent: FabricSetRead
        in:
          key:
            const: USER_NAME
            default: false
      Get Table Name:
        parent: FabricSetRead
        in:
          key:
            const: TARGET_ENTITY_ID
            default: false
      Get Source Entity ID:
        parent: FabricSetRead
        in:
          key:
            const: SOURCE_ENTITY_ID
            default: false
      Set Entity Status to Failure:
        parent: FabricSet
        in:
          key:
            const: ENTITY_STATUS
            default: false
          value:
            const: failed
            default: false
  Load Data to Detailed Error table:
    actors:
      Load Data To Error Table:
        parent: DbLoad
        in:
          interface:
            const: TDM
          schema:
            const: '@TDMDB_SCHEMA@'
          table:
            const: task_exe_error_detailed
          fields:
            const:
            - task_execution_id
            - lu_name
            - entity_id
            - iid
            - target_entity_id
            - error_category
            - error_code
            - error_message
            - creation_date
            - flow_name
            - stage_name
            - actor_name
            - actor_parameters
          dialect:
            const: postgres
          task_execution_id:
            link: Get Task Exec ID/result
            schema: string
          lu_name:
            const: TDM_TableLevel
            schema: string
          entity_id:
            link: Get Source Entity ID/result
            schema: string
          iid:
            link: Get Table Name/result
            schema: string
          target_entity_id:
            link: Get Table Name/result
            schema: string
          error_category:
            const: Rejected Table
            schema: string
          error_code:
            link: Get the Error Fields/errorCode
            schema: string
          error_message:
            link: Get the Error Fields/message
            schema: string
          creation_date:
            link: Format the current date/string
            schema: string
          flow_name:
            link: Get the Error Fields/flow
            schema: string
          stage_name:
            link: Get the Error Fields/stage
            schema: string
          actor_name:
            link: Get the Error Fields/actor
            schema: string
          actor_parameters:
            const: ''
            link: Build string from input parameters/csv
            schema: string
            default: true
      Update TDMDB table for Reference Table:
        parent: DbCommand
        in:
          interface:
            const: TDM
          sql:
            const: "UPDATE @TDMDB_SCHEMA@.TASK_REF_EXE_STATS \r\nSET execution_status\
              \ = 'failed', \r\nerror_msg = ${errorMsg},\r\nend_time = CURRENT_TIMESTAMP\
              \ AT TIME ZONE 'UTC', \r\nupdated_by = ${userName}\r\nWHERE task_execution_id\
              \ = ${taskExecutionID} \r\nand trim(lower(ref_table_name))= lower(${refTableName})"
          taskExecutionID:
            link: Get Task Exec ID/result
            schema: string
          refTableName:
            link: Get Table Name/result
            schema: string
          errorMsg:
            link: Get the Error Fields/message
            schema: string
          userName:
            link: Get Executor Name/result
            schema: string
            mandatory: false
      Set Entity Status to Failed:
        parent: FabricSet
        in:
          key:
            const: ENTITY_STATUS
            default: false
          value:
            const: failed
            default: false
      Populate Task Execution Entities:
        parent: PopulateTaskExecutionEntities_Actor
        in:
          flowName:
            const: PopulateTaskExecutionEntitiesForTables
          idType:
            const: REFERENCE
          luName:
            const: TDM_TableLevel
            schema: string
            mandatory: false
      Set Record Status to Failed:
        parent: FabricSet
        in:
          key:
            const: RECORD_STATUS
            default: false
          value:
            const: failed
            default: false
      Get LU Name:
        parent: FabricSetRead
        in:
          key:
            const: TABLES_LU_NAME
            default: false
  Update Table Entity:
    dependsOn: Load Data to Detailed Error table
    actors:
      Table Started?:
        parent: NotEquals
        condition: result
        in:
          a:
            link: Get Source Entity ID/result
            schema: string
          b:
            const: ALL_TABLES
            schema: string
      Populate Task Execution Entities For Tables:
        parent: InnerFlow
        in:
          flowName:
            const: PopulateTaskExecutionEntitiesForTables
          luName:
            link: Get LU Name/result
            schema: string
            mandatory: false
          taskExecutionId:
            link: Get Task Exec ID/result
            schema: string
            mandatory: false
      Update Table Status to Failed:
        parent: DbCommand
        in:
          interface:
            const: TDM
          sql:
            const: "update @TDMDB_SCHEMA@.task_ref_exe_stats\r\nset execution_status\
              \ = 'failed',\r\nend_time = CURRENT_TIMESTAMP AT TIME ZONE 'UTC'\r\n\
              where task_execution_id = ${taskExeId} \r\nand ref_table_name = ${tableName}"
          taskExeId:
            link: Get Task Exec ID/result
            schema: string
            mandatory: false
          tableName:
            link: Get Table Name/result
            schema: string
            mandatory: false
    split: '--------------------'
  Update All Entities:
    else: true
    transactional: false
    dependsOn: Load Data to Detailed Error table
    actors:
      Update ALL Tables Status to Failed:
        parent: DbCommand
        in:
          interface:
            const: TDM
          sql:
            const: "update @TDMDB_SCHEMA@.task_ref_exe_stats\r\nset execution_status\
              \ = 'failed',\r\nend_time = CURRENT_TIMESTAMP AT TIME ZONE 'UTC'\r\n\
              where task_execution_id = ${taskExeId}"
          taskExeId:
            link: Get Task Exec ID/result
            schema: string
            mandatory: false
  '1': {
    }
schemas:
  Get the Error Fields.out.inputs:
    type: object
    properties:
      interface:
        type: string
      luType:
        type: string
      parallel:
        type: boolean
      stop_on_error:
        type: boolean
      syncMode:
        type: string
      iid:
        type: string
