stages:
  Update Total:
    actors:
      Update Table's Total Count:
        parent: DbCommand
        in:
          interface:
            const: TDM
          sql:
            const: |-
              update @TDMDB_SCHEMA@.task_ref_exe_stats
              set number_of_records_to_process = ${totalCount},
                  execution_status = 'running'
              where task_execution_id = ${taskExeId}
              and task_ref_table_id = ${tableId}
          taskExeId:
            external: taskExeId
            schema: integer
            mandatory: false
          tableId:
            external: tableId
            schema: integer
            mandatory: false
          totalCount:
            external: totalCount
            schema: integer
            mandatory: false
