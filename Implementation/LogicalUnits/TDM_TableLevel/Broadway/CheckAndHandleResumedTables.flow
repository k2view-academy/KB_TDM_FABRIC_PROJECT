stages:
  Get List of Running Tables:
    actors:
      List Of Resumed Tables:
        parent: DbCommand
        in:
          interface:
            const: TDM
          sql:
            const: "SELECT es.job_uid\r\nFROM  @TDMDB_SCHEMA@.TASK_REF_EXE_STATS es,\
              \ @TDMDB_SCHEMA@.TASK_REF_TABLES rt\r\nWHERE lower(es.execution_status)\
              \ = 'running'\r\nAND rt.task_id = es.task_id AND rt.task_ref_table_id\
              \ = es.task_ref_table_id\r\nAND es.task_execution_id = ${taskExecutionId}"
          taskExecutionId:
            external: taskExecutionId
            schema: string
            mandatory: false
        out:
          result:
            schema: '#ref'
  Wait for Running tables to finish:
    actors:
      Wait  For Current Table Level to Finish:
        parent: BatchWait
        in:
          batchId:
            const: null
            link:
              path: List Of Resumed Tables/result/job_uid
              iterate: Iterate
            default: false
schemas:
  List Of Resumed Tables.out.result:
    type: array
    items:
      type: object
      properties:
        job_uid:
          type: string
