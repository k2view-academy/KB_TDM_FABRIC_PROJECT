stages:
  Set The Count:
    actors:
      Calculate The Record Count:
        parent: JavaScript
        in:
          script:
            const: |-
              var i = flowGlobals.recordCount;
              if (i == null) {
                  i = 0;
              }
              flowGlobals.recordCount = ++i;
        out:
          result:
            schema: integer
  Check if to Update:
    actors:
      Get Mod of Current Count:
        parent: MathDivMod
        in:
          a:
            link: Calculate The Record Count/result
            schema: integer
          b:
            external: commitSize
            schema: integer
  Update Table's Count:
    actors:
      Report Count?:
        parent: Equals
        condition: result
        in:
          a:
            link: Get Mod of Current Count/mod
            schema: integer
          b:
            const: 0
            schema: integer
      Update Table's Processed Count:
        parent: DbCommand
        in:
          interface:
            const: TDM
          sql:
            const: "update @TDMDB_SCHEMA@.task_ref_exe_stats\r\nset number_of_processed_records\
              \ = ${recCount}\r\nwhere task_execution_id = ${taskExeId} \r\nand task_ref_table_id\
              \ = ${tableId}"
          taskExeId:
            external: taskExeId
            schema: integer
            mandatory: false
          tableId:
            external: tableId
            schema: integer
            mandatory: false
          recCount:
            link: Calculate The Record Count/result
            schema: integer
            mandatory: false
  Return Input Record as is:
    actors:
      Input Records:
        parent: Const
        in:
          value:
            const: null
            external: value
        out:
          value:
            external: value
            schema: '#ref'
schemas:
  Input Records.out.value:
    type: object
    properties:
      customer_id:
        type: integer
      ssn:
        type: string
      first_name:
        type: string
      last_name:
        type: string
      email:
        type: string
