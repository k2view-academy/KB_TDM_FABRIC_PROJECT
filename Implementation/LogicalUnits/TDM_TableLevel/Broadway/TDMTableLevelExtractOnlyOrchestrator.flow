stages:
  Initiate:
    actors:
      Get Start Time:
        parent: Now
      Logger:
        parent: Logger
        in:
          message:
            const: 'Starting TDMTableLevelExtractOnlyOrchestrator for Table Instance:
              ${table}'
          level:
            const: info
          table:
            external: iid
            schema: string
            mandatory: false
      Get Table Instance Fields:
        parent: InnerFlow
        in:
          flowName:
            const: GetTableInstanceFields
          ref_instance_id:
            external: iid
            schema: string
            mandatory: false
        out:
          result:
            schema: '#ref'
      Initiate Entity Status:
        parent: FabricSet
        in:
          key:
            const: ENTITY_STATUS
            default: false
          value:
            const: completed
            default: false
      Set Lu Name:
        parent: FabricSet
        in:
          key:
            const: LU_TYPE
            default: false
          value:
            const: TDM_TableLevel
            default: false
      Set root_lu_name:
        parent: FabricSet
        in:
          key:
            const: root_lu_name
            default: false
          value:
            const: TDM_TableLevel
            default: false
  Get and Set Parameters:
    actors:
      Format Start Time:
        parent: DateFormat
        in:
          date:
            link: Get Start Time/date
      Get Executor Name:
        parent: FabricSetRead
        in:
          key:
            const: USER_NAME
            default: false
      Initiate Target Entity ID after IID Split:
        parent: FabricSet
        remark: The Target Entity ID should be initiated in case the flows fails during
          the next stage and before setting this ID as it is used in the Error handler
        in:
          key:
            const: TARGET_ENTITY_ID
            default: false
          value:
            const: null
            link: Get Table Instance Fields/result/table_name
            default: false
      Set root_iid:
        parent: FabricSet
        in:
          key:
            const: root_iid
            default: false
          value:
            const: null
            link: Get Table Instance Fields/result/table_name
            default: false
  Set Source Environment:
    transactional: false
    actors:
      set Source Env:
        parent: InnerFlow
        in:
          flowName:
            const: setSourceEnv
      Update Table Status to Running:
        parent: DbCommand
        in:
          interface:
            const: TDM
          sql:
            const: "update @TDMDB_SCHEMA@.task_ref_exe_stats\r\nset execution_status\
              \ = 'running',\r\nstart_time = CURRENT_TIMESTAMP AT TIME ZONE 'UTC',\
              \ \r\nupdated_by = ${userName}\r\nwhere task_execution_id = ${taskExeId}\
              \ \r\nand ref_table_name = ${tableName}"
          userName:
            link: Get Executor Name/result
            schema: string
            mandatory: false
          taskExeId:
            link: Get Table Instance Fields/result/task_execution_id
            schema: string
            mandatory: false
          tableName:
            link: Get Table Instance Fields/result/table_name
            schema: string
            mandatory: false
  Sync Table:
    transactional: false
    actors:
      Sync Error Handler:
        parent: ErrorHandler
        error: result
        in:
          config:
            const:
            - exceptionKey: java.lang.Exception
              conditions:
                message: ''
              actions:
                suppress: false
                log: true
                flowName: PopulateTableErrorsForTableLevel
      Set Start Processing Time:
        parent: FabricSet
        in:
          key:
            const: IID_START_DATETIME
            default: false
          value:
            const: null
            link: Format Start Time/string
            default: false
      Get Instance:
        parent: FabricGet
        in:
          luType:
            const: TDM_TableLevel
          iid:
            const: null
            external: iid
            schema: string
            default: false
          syncMode:
            const: null
            external: syncMode
  Update TDM DB Tables:
    transactional: false
    actors:
      Extract Only Task?:
        parent: EqualsIgnoreCase
        condition: result
        in:
          a:
            external: taskType
            schema: string
          b:
            const: extract
            schema: string
      Populate Task Execution Entities:
        parent: InnerFlow
        in:
          flowName:
            const: PopulateTaskExecutionEntitiesForTables
          luName:
            external: luName
            schema: string
            mandatory: false
          taskExecutionId:
            link: Get Table Instance Fields/result/task_execution_id
            schema: string
            mandatory: false
      Update Table Status to Completed:
        parent: DbCommand
        in:
          interface:
            const: TDM
          sql:
            const: "update @TDMDB_SCHEMA@.task_ref_exe_stats\r\nset execution_status\
              \ = 'completed',\r\nend_time = CURRENT_TIMESTAMP AT TIME ZONE 'UTC'\r\
              \nwhere task_execution_id = ${taskExeId} \r\nand ref_table_name = ${tableName}"
          taskExeId:
            link: Get Table Instance Fields/result/task_execution_id
            schema: string
            mandatory: false
          tableName:
            link: Get Table Instance Fields/result/table_name
            schema: string
            mandatory: false
schemas:
  Get Table Instance Fields.out.result:
    type: object
    properties:
      source_env:
        type: string
      interface_name:
        type: string
      schema_name:
        type: string
      table_name:
        type: string
      task_execution_id:
        type: string
