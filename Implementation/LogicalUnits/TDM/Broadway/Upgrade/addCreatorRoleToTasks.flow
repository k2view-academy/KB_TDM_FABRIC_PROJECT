tags: Upgrade
stages:
  Stage 1:
    actors:
      DbCommand1:
        parent: DbCommand
        in:
          interface:
            const: TDM
          sql:
            const: select distinct task_created_by from ${@schema}.tasks where task_created_by
              not like '%##%'
          schema:
            const: '@TDMDB_SCHEMA@'
            schema: string
            mandatory: false
        out:
          result:
            schema: '#ref'
  Stage 2:
    actors:
      MTableLookup1:
        parent: MTableLookup
        in:
          mtable:
            const: UserRolesUpgrade
          user_id:
            link:
              path: DbCommand1/result/task_created_by
              iterate: Iterate
            schema: string
            editor:
              id: com.k2view.mTableKey
            mandatory: false
        out:
          result:
            schema: '#ref'
          user_roles:
            schema: string
  Stage 3:
    actors:
      NotNull1:
        parent: NotNull
        condition: result
        in:
          value:
            link: MTableLookup1/user_roles
      DbCommand2:
        parent: DbCommand
        in:
          interface:
            const: TDM
          sql:
            const: |-
              update ${@schema}.tasks
              set task_created_by = task_created_by || '##'||${userRoles}
              where task_created_by = ${userId}
          schema:
            const: '@TDMDB_SCHEMA@'
            schema: string
            mandatory: false
          userRoles:
            link: MTableLookup1/user_roles
            schema: string
            mandatory: false
          userId:
            link:
              path: DbCommand1/result/task_created_by
              iterate: Iterate
            schema: string
            mandatory: false
        out:
          result:
            schema: '#ref'
schemas:
  DbCommand1.out.result:
    type: array
    items:
      type: object
      properties:
        task_created_by:
          type: string
  MTableLookup1.out.result:
    type: array
    items:
      type: object
      properties:
        user_id:
          type: string
        user_roles:
          type: string
  DbCommand2.out.result:
    type: array
    items:
      type: object
      properties:
        task_created_by:
          type: string
