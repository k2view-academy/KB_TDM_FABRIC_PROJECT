tags: Deploy
stages:
  Get Roles:
    actors:
      Get List of Roles:
        parent: DbCommand
        in:
          interface:
            const: fabric
          sql:
            const: list roles
        out:
          result:
            schema: '#ref'
      Get TDMDB Schema:
        parent: FabricSetRead
        in:
          key:
            const: TDMDB_SCHEMA
            default: false
  Check Role Name:
    actors:
      StringPos1:
        parent: StringPos
        in:
          substring:
            const: _k2v_
          string:
            link:
              path: Get List of Roles/result/name
              iterate: Iterate
  Insert Role to Permission Groups Table:
    dependsOn: Check Role Name
    actors:
      Equals1:
        parent: Equals
        condition: result
        in:
          a:
            link: StringPos1/found
            schema: boolean
          b:
            const: true
            schema: boolean
      DbCommand1:
        parent: DbCommand
        in:
          interface:
            const: TDM
          sql:
            const: "INSERT INTO ${@schema}.permission_groups_mapping(\n\tdescription,\
              \ fabric_role, permission_group, created_by, updated_by, creation_date,\
              \ update_date)\n\tVALUES ('Initial mapping for tester user',${k2v_user}\
              \ ,'tester', 'admin', 'admin', NOW(), NOW()) ON CONFLICT DO NOTHING;\n"
          k2v_user:
            link:
              path: Get List of Roles/result/name
              iterate: Iterate
            schema: string
            mandatory: false
          schema:
            link: Get TDMDB Schema/result
            schema: string
            mandatory: false
    split: '--------------------'
  Stage 3:
    else: true
    transactional: false
    dependsOn: Check Role Name
schemas:
  Get List of Roles.out.result:
    type: array
    items:
      type: object
      properties:
        name:
          type: string
        security profiles:
          type: string
        description:
          type: string
