tags: TDM
stages:
  Inputs:
    actors:
      luName:
        parent: Lowercase
        in:
          string:
            external: luName
      _params:
        parent: Const
        in:
          value:
            const: _params
            schema: string
        out:
          value:
            schema: string
      TDMDB_SCHEMA:
        parent: FabricSetRead
        in:
          key:
            const: TDMDB_SCHEMA
  build table name:
    actors:
      Lu_Params:
        parent: StringFormat
        in:
          format:
            const: ${lu}${table}
          lu:
            link: luName/string
            schema: string
            mandatory: false
          table:
            link: _params/value
            schema: string
            mandatory: false
      Lu_Params_Bakcup:
        parent: StringFormat
        in:
          format:
            const: ${lu}${table}_backup
          lu:
            link: luName/string
            schema: string
            mandatory: false
          table:
            link: _params/value
            schema: string
            mandatory: false
  'check if table exists  ':
    actors:
      DbFetchField:
        parent: DbFetchField
        in:
          interface:
            const: TDM
          sql:
            const: |
              SELECT EXISTS (
                 SELECT 1
                 FROM pg_tables
                 WHERE schemaname = ${schema}
                 AND tablename = ${table}
              );
          schema:
            link: TDMDB_SCHEMA/result
            schema: string
            mandatory: false
          table:
            link: Lu_Params/string
            schema: string
            mandatory: false
        out:
          result:
            schema: boolean
  Rename Table:
    dependsOn: 'check if table exists  '
    actors:
      'True':
        parent: EqualsIgnoreCase
        condition: result
        in:
          b:
            const: 'true'
            schema: string
          a:
            link: DbFetchField/result
      DbCommand1:
        parent: DbCommand
        in:
          interface:
            const: TDM
          sql:
            const: |
              ALTER TABLE ${@TDMDB_SCHEMA}.${@originaltable} RENAME TO ${@backuptable};
          backuptable:
            link: Lu_Params_Bakcup/string
            schema: string
            mandatory: false
          originaltable:
            link: Lu_Params/string
            schema: string
            mandatory: false
          TDMDB_SCHEMA:
            link: TDMDB_SCHEMA/result
            schema: string
            mandatory: false
    split: '--------------------'
  Do Nothing:
    else: true
    dependsOn: 'check if table exists  '
