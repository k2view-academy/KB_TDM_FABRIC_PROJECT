tags: TDM
stages:
  Prepare the Data:
    actors:
      Get LU Type:
        parent: FabricSetRead
        in:
          key:
            const: LU_TYPE
            default: false
      Get IID:
        parent: FabricSetRead
        in:
          key:
            const: IID
            default: false
      Get Target Entity ID:
        parent: FabricSetRead
        in:
          key:
            const: TARGET_ENTITY_ID
            default: false
      Get Source Entity ID:
        parent: FabricSetRead
        in:
          key:
            const: SOURCE_ENTITY_ID
            default: false
      Get Current Date:
        parent: Now
  Continue Preparing:
    actors:
      Get Task Execution ID:
        parent: FabricSetRead
        in:
          interface:
            default: false
          key:
            const: TDM_TASK_EXE_ID
            default: false
      No Target Entity ID?:
        parent: Equals
        in:
          a:
            link: Get Target Entity ID/result
            schema: string
          b:
            const: NO_ID
            schema: string
      Get the Error Fields:
        parent: ErrorFields
        in:
          error:
            external: error
        out:
          inputs:
            schema: '#ref'
          additional:
            schema: '#ref'
      'Format the current date to load it ':
        parent: DateFormat
        in:
          date:
            link: Get Current Date/date
  Format Fields and clean unsupported chars:
    actors:
      Format Task Execution ID:
        parent: ToNumber
        in:
          value:
            link: Get Task Execution ID/result
      Format Error Code:
        parent: ToString
        in:
          value:
            link: Get the Error Fields/errorCode
      Remove none ASC Characters:
        parent: JavaScript
        in:
          script:
            const: |-
              var str = '';
              var obj = {};
              for (var key in inputs) {
                str = inputs[key];
                if (str != null) {
                  str = str.toString().replace(/[^\x20-\x7F]/g,"");
                  obj[key] = str;
                }
              }
              obj;
          inputs:
            link: Get the Error Fields/inputs/params
            schema: '#ref'
            mandatory: false
        out:
          result:
            schema: '#ref'
  Format the actor's parameters:
    actors:
      If No Target Entity ID Set to Source Entity ID:
        parent: IfElse
        in:
          a:
            link: Get IID/result
            schema: string
          b:
            link: Get Target Entity ID/result
            schema: string
          test:
            link: No Target Entity ID?/result
        out:
          result:
            schema: string
      Build string from input parameters:
        parent: CsvBuilder
        in:
          header:
            const: false
          maps:
            link: Remove none ASC Characters/result
  Load Data to Detailed Error table:
    actors:
      Load Data To Error Table:
        parent: DbLoad
        in:
          interface:
            const: TDM
          schema:
            const: '@TDMDB_SCHEMA@'
          table:
            const: task_exe_error_detailed
          fields:
            const:
            - task_execution_id
            - lu_name
            - entity_id
            - iid
            - target_entity_id
            - error_category
            - error_code
            - error_message
            - creation_date
            - flow_name
            - stage_name
            - actor_name
            - actor_parameters
          dialect:
            const: postgres
          task_execution_id:
            link: Format Task Execution ID/number
            schema: string
          lu_name:
            link: Get LU Type/result
            schema: string
          entity_id:
            link: Get Source Entity ID/result
            schema: string
          iid:
            link: Get IID/result
            schema: string
          target_entity_id:
            link: If No Target Entity ID Set to Source Entity ID/result
            schema: string
          error_category:
            external: error_category
            schema: string
          error_code:
            link: Format Error Code/string
            schema: string
          error_message:
            link: Get the Error Fields/message
            schema: string
          creation_date:
            link: Format the current date to load it /string
            schema: string
          flow_name:
            link: Get the Error Fields/flow
            schema: string
          stage_name:
            link: Get the Error Fields/stage
            schema: string
          actor_name:
            link: Get the Error Fields/actor
            schema: string
          actor_parameters:
            const: ''
            link: Build string from input parameters/csv
            schema: string
            default: true
schemas:
  Get the Error Fields.out.inputs:
    type: object
    properties:
      interface:
        type: string
      command:
        type: string
      schema:
        type: string
      table:
        type: string
      fields:
        type: array
        items:
          type: string
      keys:
        type: array
        items:
          type: string
      dialect:
        type: string
      ignoreNulls:
        type: boolean
      batch:
        type: boolean
      params:
        type: object
        properties: null
  Get the Error Fields.out.additional:
    type: object
    properties:
      rootExceptionClass:
        type: string
      exceptionClass:
        type: string
      sql:
        type: string
  Remove none ASC Characters.in.inputs:
    type: object
    properties: null
  Remove none ASC Characters.out.result:
    type: object
    properties: null
