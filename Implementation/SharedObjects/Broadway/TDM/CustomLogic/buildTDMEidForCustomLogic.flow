tags: TDM
stages:
  Get Inputs:
    actors:
      Get Source Environment:
        parent: FabricSetRead
        in:
          key:
            const: TDM_SOURCE_ENVIRONMENT_NAME
            default: false
      get TDM Separators:
        parent: getTDMSeparators
      StringsToBytes:
        parent: StringsToBytes
        in:
          strings:
            external: value
  Check Version Indicator:
    actors:
      Get Version Indicator:
        parent: FabricSetRead
        in:
          key:
            const: TDM_DATAFLUX_TASK
            default: false
      BytesToStrings:
        parent: BytesToStrings
        in:
          stream:
            link: StringsToBytes/stream
  Check if Data Flux:
    dependsOn: Check Version Indicator
    actors:
      Indicator is True:
        parent: EqualsIgnoreCase
        condition: result
        in:
          b:
            const: true
            schema: boolean
          a:
            link: Get Version Indicator/result
      TDM_TASK_EXE_ID:
        parent: FabricSetRead
        height: 234
        in:
          key:
            const: TDM_TASK_EXE_ID
            default: false
    split: '--------------------'
  Build Simple TDM_EID:
    else: true
    transactional: false
    dependsOn: Check Version Indicator
    actors:
      Format Simple EID:
        parent: StringFormat
        in:
          format:
            const: ${sourceEnv}${iidSeparator}${iidOpenSeparator}${sourceIID}${iidCloseSeparator}
          sourceEnv:
            link: Get Source Environment/result
            schema: string
          iidSeparator:
            link: get TDM Separators/IID_SEPARATOR
            schema: string
          iidOpenSeparator:
            link: get TDM Separators/IID_OPEN_SEPARATOR
            schema: string
          sourceIID:
            link:
              path: BytesToStrings/strings
              iterate: First
            schema: string
          iidCloseSeparator:
            link: get TDM Separators/IID_CLOSE_SEPARATOR
            schema: string
  Build DataFlux IID:
    dependsOn: Check if Data Flux
    actors:
      Format DataFlux EID:
        parent: StringFormat
        in:
          format:
            const: ${sourceEnv}${iidSeparator}${iidOpenSeparator}${sourceIID}${iidCloseSeparator}${iidSeparator}${taskExeID}
          sourceEnv:
            link: Get Source Environment/result
            schema: string
          iidSeparator:
            link: get TDM Separators/IID_SEPARATOR
            schema: string
          iidOpenSeparator:
            link: get TDM Separators/IID_OPEN_SEPARATOR
            schema: string
          sourceIID:
            link:
              path: BytesToStrings/strings
              iterate: First
            schema: string
          iidCloseSeparator:
            link: get TDM Separators/IID_CLOSE_SEPARATOR
            schema: string
          taskExeID:
            link: TDM_TASK_EXE_ID/result
            schema: any
            mandatory: false
    split: '--------------------'
  Do Nothing:
    transactional: false
    dependsOn: Build Simple TDM_EID
  Stage 1:
    actors:
      MapCreate1:
        parent: MapCreate
        in:
          iid:
            link:
            - Format Simple EID/string
            - Format DataFlux EID/string
            schema: string
            mandatory: false
        out:
          map:
            external: value
            schema: '#ref'
schemas:
  MapCreate1.out.map:
    type: object
    properties:
      iid:
        type: string
