tags: TDM
stages:
  Stage 1:
    actors:
      Get Project Directory:
        parent: InnerFlow
        in:
          flowName:
            const: GetProjectFolder
        out:
          PROJECT_FOLDER:
            schema: string
  Stage 2:
    actors:
      FileRead1:
        parent: FileRead
        height: 165
        in:
          interface:
            const: null
            link: Get Project Directory/PROJECT_FOLDER
          path:
            const: SharedObjects/Templates/TDM/tdmLoadAllTables.flow.template
      LuFunction1:
        parent: LuFunction
        in:
          functionName:
            const: getLuTablesMappedByOrder
          reverseInd:
            const: false
            schema: boolean
          luName:
            external: LU_NAME
            schema: string
            mandatory: false
        out:
          res:
            schema: '#ref'
  Stage 3:
    actors:
      flow folder:
        parent: StringFormat
        in:
          format:
            const: ${PROJECT_DIRECTORY}/LogicalUnits/${LU_NAME}/Broadway/LoadFlows
          LU_NAME:
            external: LU_NAME
            schema: string
          PROJECT_DIRECTORY:
            link: Get Project Directory/PROJECT_FOLDER
            schema: string
            mandatory: false
      ApplyTemplate:
        parent: LuFunction
        in:
          functionName:
            const: transform
          templateContent:
            link: FileRead1/stream
            schema: '#ref'
          data:
            link: LuFunction1/res
            schema: '#ref'
        out:
          result:
            schema: string
  Stage 4:
    actors:
      FileWrite1:
        parent: FileWrite
        in:
          interface:
            const: null
            link: flow folder/string
          path:
            const: LoadAllTables.flow
          stream:
            link: ApplyTemplate/result
schemas:
  LuFunction1.out.res:
    type: array
    items:
      type: array
      items:
        type: string
  ApplyTemplate.in.templateContent:
    type: array
    items:
      type: blob
  ApplyTemplate.in.data:
    type: array
    items:
      type: array
      items:
        type: string
