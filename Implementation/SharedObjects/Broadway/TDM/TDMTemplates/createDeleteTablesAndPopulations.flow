tags: TDM
stages:
  Get List of Tables:
    actors:
      geLuTables:
        parent: LuFunction
        in:
          functionName:
            const: getLuTables
          luName:
            external: LU_NAME
            schema: string
            editor:
              id: com.k2view.logicalUnit
              addEmptyEntry: true
            mandatory: false
        out:
          res:
            schema: '#ref'
      Get Delete Table Prefix:
        parent: FabricSetRead
        in:
          key:
            const: TDM_DELETE_TABLES_PREFIX
            default: false
  Create the Name Of Delete Table:
    actors:
      Build Delete Table Name:
        parent: StringFormat
        height: 235
        in:
          format:
            const: ${prefix}${table}
          prefix:
            link: Get Delete Table Prefix/result
            schema: string
            mandatory: false
          table:
            link:
              path: geLuTables/res
              iterate: Iterate
            schema: string
            mandatory: false
  Check If Table Already Exists:
    dependsOn: Create the Name Of Delete Table
    actors:
      Override Existing Table?:
        parent: Equals
        condition: result
        in:
          a:
            external: OVERRIDE_EXISTING_FLOWS
            schema: boolean
          b:
            const: false
            schema: boolean
      Check If Table Exists:
        parent: CheckIfFlowExists
        in:
          flowName:
            const: CheckIfTableExists
          LU_NAME:
            external: LU_NAME
            editor:
              id: com.k2view.logicalUnit
              addEmptyEntry: true
          FLOW_FILE_NAME:
            link: Build Delete Table Name/string
        out:
          SKIP_TABLE:
            schema: boolean
    split: '--------------------'
  Create Table Always:
    else: true
    transactional: false
    dependsOn: Create the Name Of Delete Table
    actors:
      Create Table:
        parent: InnerFlow
        in:
          flowName:
            const: createDeleteTablesFiles
          luType:
            external: LU_NAME
            schema: string
            editor:
              id: com.k2view.logicalUnit
              addEmptyEntry: true
          table:
            link:
              path: geLuTables/res
              iterate: Iterate
            schema: string
            mandatory: false
          TARGET_SCHEMA:
            external: TARGET_SCHEMA
            schema: string
            mandatory: false
          TARGET_INTERFACE:
            external: TARGET_INTERFACE
            schema: string
            mandatory: false
          useFabric:
            external: useFabric
            schema: boolean
            mandatory: false
  Create New:
    last: 1
    dependsOn: Check If Table Already Exists
    actors:
      If table Does Not Exists:
        parent: Equals
        condition: result
        in:
          a:
            link: Check If Table Exists/SKIP_TABLE
            schema: boolean
          b:
            const: false
            schema: boolean
      Create New Table:
        parent: InnerFlow
        in:
          flowName:
            const: createDeleteTablesFiles
          luType:
            external: LU_NAME
            schema: string
            editor:
              id: com.k2view.logicalUnit
              addEmptyEntry: true
          table:
            link:
              path: geLuTables/res
              iterate: Iterate
            schema: string
            mandatory: false
          TARGET_SCHEMA:
            external: TARGET_SCHEMA
            schema: string
            mandatory: false
          TARGET_INTERFACE:
            external: TARGET_INTERFACE
            schema: string
            mandatory: false
          useFabric:
            external: useFabric
            schema: boolean
            mandatory: false
    split: '--------------------'
  Table Already Exists:
    last: 1
    else: true
    transactional: false
    dependsOn: Check If Table Already Exists
    actors:
      Report to Log:
        parent: Logger
        in:
          message:
            const: 'The table: <${TABLE_NAME}> already Exists'
          level:
            const: info
          TABLE_NAME:
            link:
              path: geLuTables/res
              iterate: Iterate
            schema: string
    split: '--------------------'
  Stage 6:
    last: 1
    else: false
    transactional: false
    dependsOn: Create Table Always
  Update LU's Schema:
    actors:
      Add Tables to LU's Schema:
        parent: InnerFlow
        in:
          flowName:
            const: AddDeleteTablesToSchema
          luName:
            external: LU_NAME
            schema: string
            mandatory: false
          schemaName:
            external: TARGET_SCHEMA
            schema: string
            mandatory: false
          interfaceName:
            external: TARGET_INTERFACE
            schema: string
            mandatory: false
schemas:
  geLuTables.out.res:
    type: array
    items:
      type: string
